@model EMY.Restaurant.Core.Domain.Entities.MenuCategory

<h4>Sub Category</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrEditSubCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(o=>o.MenuCategoryID)
            @Html.HiddenFor(o=>o.MasterMenuCategoryID)           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control bg-dark text-light" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control bg-dark text-light" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>         
        </form>
    </div>
</div>
