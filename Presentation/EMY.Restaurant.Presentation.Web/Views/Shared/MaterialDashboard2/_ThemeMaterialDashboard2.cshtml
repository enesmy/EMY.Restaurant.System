@using EMY.Restaurant.Infrastructure.Persistence
<!DOCTYPE html>
<html lang="de">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <!--light theme-->
    <link rel="icon" href="/img/favicons/cropped-papel-logo-01-32x32.png" sizes="32x32" id="light-scheme-icon-x32">
    <link rel="icon" href="/img/favicons/cropped-papel-logo-01-192x192.png" sizes="192x192" id="light-scheme-icon-x192" />
    <link rel="apple-touch-icon" type="image/x-icon" sizes="180x180" href="/img/favicons/cropped-papel-logo-01-180x180.png" />
    <meta name="msapplication-TileImage" type="image/x-icon" content="/img/favicons/cropped-papel-logo-01-270x270.png" />


    <!--Dark Theme-->
    <link rel="icon" href="/img/favicons/cropped-papel-white-logo-01-32x32.png" sizes="32x32" id="dark-scheme-icon-x32">
    <link rel="icon" href="/img/favicons/cropped-papel-white-logo-01-192x192.png" sizes="192x192" id="light-scheme-icon-x192" />
    <link rel="apple-touch-icon" type="image/x-icon" href="/img/favicons/cropped-papel-white-logo-01-180x180.png" sizes="180x180" id="light-scheme-icon-x180" />
    <meta name="msapplication-TileImage" type="image/x-icon" content="/img/favicons/cropped-papel-white-logo-01-270x270.png" id="light-scheme-icon-x270" />




    <title>@ViewData["Title"] - Papel Admin</title>

    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="/Themes/MaterialDashboard2/css/RobotoFont.css" />
    <!-- Nucleo Icons -->
    <link href="/Themes/MaterialDashboard2/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/Themes/MaterialDashboard2/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- CSS Files -->
    <link id="pagestyle" href="/Themes/MaterialDashboard2/css/material-dashboard.css?v=3.0.2" rel="stylesheet" />



</head>

<body class="g-sidenav-show  bg-gray-200">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 bg-gradient-dark" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0" target="_blank" asp-controller="Home" asp-action="Index">
                <img src="/img/favicons/papel-white-icon.png" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold text-white">@Configuration.SystemName</span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto  max-height-vh-100" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">dashboard</i>
                        </div>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Reservations">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        <span class="nav-link-text ms-1">Reservations</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Order">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        <span class="nav-link-text ms-1">Orders</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="MenuCategory">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        <span class="nav-link-text ms-1">Menu Settings</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="HomePageSlider">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        <span class="nav-link-text ms-1">Slider</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="HomePageContents">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        <span class="nav-link-text ms-1">Home Page Contents</span>
                    </a>
                </li>
                <li class="nav-item mt-3">
                    <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">Account pages</h6>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Account" asp-action="UserList">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-users fa-solid fa-sm fa-fw mr-2 text-gray-400"></i>
                        </div>
                        <span class="nav-link-text ms-1">Users</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Account" asp-action="UserGroups">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-users fa-solid fa-sm fa-fw mr-2 text-gray-400"></i>
                        </div>
                        <span class="nav-link-text ms-1">User Groups</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Account" asp-action="MyProfile">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-user fa-solid fa-sm fa-fw mr-2 text-gray-400"></i>
                        </div>
                        <span class="nav-link-text ms-1">My Profile</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-center" style="cursor:pointer;" data-bs-toggle="modal" data-bs-target="#logoutModal">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                        </div>
                        <span class="nav-link-text ms-1">Sign Out</span>
                    </a>
                </li>

            </ul>
        </div>

    </aside>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <!-- Navbar -->

        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Admin</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">@ViewData["Title"]</h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group input-group-outline">
                        </div>
                    </div>                 
                </div>
            </div>
        </nav>
        <!-- End Navbar -->


        <hr />
        <div class="container-fluid py-4">
            @RenderBody()

        </div>
    </main>
   
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Ready to Leave?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Select "Logout" below if you are ready to end your current session.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="LogOut">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Messagebox.Show Modal-->

    <div class="modal" id="MessageboxModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="messageboxModalLabel">Modal title</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="modal-body" id="messageboxModalContent">
                    content
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="button" onclick="MessageBox.saveClicked()" id="modalSave" data-bs-dismiss="modal">Save</button>
                    <button class="btn btn-success" type="button" onclick="MessageBox.yesClicked()" id="modalYes" data-bs-dismiss="modal">Yes</button>
                    <button class="btn btn-danger" type="button" onclick="MessageBox.noClicked()" id="modalNo" data-bs-dismiss="modal">No</button>
                    <button class="btn btn-secondary" type="button" onclick="MessageBox.clear()" id="modalClose" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>






    <!--   Core JS Files   -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Themes/MaterialDashboard2/js/core/bootstrap.min.js"></script>



    <script src="~/Themes/MaterialDashboard2/js/core/popper.min.js"></script>
    <script src="~/Themes/MaterialDashboard2/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/Themes/MaterialDashboard2/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="~/Themes/MaterialDashboard2/js/plugins/chartjs.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/MessageBox.js"></script>

    <!--  Notifications Plugin    -->
    <script>

        var path = window.location.href; // because the 'href' property of the DOM element is the absolute path
        var elements = document.getElementsByClassName('nav-link text-white');
        Array.from(elements).forEach(eleman);

        function eleman(element) {

            if (path == element.href) {
                element.className = "nav-link text-white active bg-gradient-primary";
            }
        }

        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }



    </script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Themes/MaterialDashboard2/js/material-dashboard.min.js?v=3.0.2"></script>

</body>

</html>